<main class="mt-5 m-auto w-50">
  <h1 class="mb-3 fw-normal">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 pt-1">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", placeholder: "ahmad@email.com" %>
    </div>

    <div class="mb-3 pt-1">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Password (6 characters minimum)" %>
    </div>

    <div class="mb-3 pt-1">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Password Confirmation" %>
    </div>

    <div class="mb-3 pt-1">
      <%= f.submit "Sign up", class: 'btn btn-primary shadow-sm' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>