<section class="container">
  <div class="mb-4 mt-5">
    <h2 class="d-inline-block">Working Logs</h2>
    <a href="#" type="button" class="btn bg-white text-pink shadow-sm float-end curved" data-bs-toggle="modal" data-bs-target="#newWorkLog">
      + Add Log
    </a>
  </div>

  <table class="table table-striped table-responsive-sm table-bordered shadow-sm">
    <thead class="bg-white">
    <tr>
      <th class="text-center px-3">#</th>
      <th class="text-center">Time</th>
      <th>Description</th>
      <th class="text-center">Task</th>
      <th class="text-center">Date</th>
    </tr>
    </thead>

    <tbody class="border bg-white bg-opacity-75">
    <% @worklogs.each_with_index do |worklog, index| %>
      <tr>
        <td class="text-center"><%= index + 1 %></td>
        <td class="text-center"><%= worklog.minutes_worked %></td>
        <td><%= truncate worklog.description, length: 90 %></td>
        <td class="text-center"><%= worklog.task.name %></td>
        <td class="text-center"><%= worklog.created_at.to_date %></td>
        <!--        <td><%#= link_to 'Show', worklog %></td>-->
        <!--        <td><%#= link_to 'Edit', edit_worklog_path(worklog) %></td>-->
        <!--        <td><%#= link_to 'Destroy', worklog, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="modal fade" id="newWorkLog" tabindex="-1" aria-labelledby="newWorkLogLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title fw-normal" id="newWorkLogLabel"> Create Work Log </h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'worklogs/form', worklog: @worklog %>
        </div>
      </div>
    </div>
  </div>
</section>